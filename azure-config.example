# Azure Configuration for TeknoTassen Backend
# Copy these values to your .env file

# Azure Key Vault
AZURE_KEY_VAULT_URL=https://kv-teknotassen.vault.azure.net/

# Azure PostgreSQL (from CTO)
AZURE_POSTGRES_SERVER=pg-teknotassen.postgres.database.azure.com
AZURE_POSTGRES_DATABASE=teknotassen
AZURE_POSTGRES_ADMIN=ttadmin@pg-teknotassen

# PostgreSQL App User (recommended for application)
AZURE_POSTGRES_APP_USER=teknotassen_app
# Note: App user password will be stored in Key Vault as PostgresAppConnectionString

# Azure Storage Container Names (from CTO)
AZURE_COURSES_CONTAINER=courses
AZURE_BRANDING_CONTAINER=branding

# Azure Service Principal (for Key Vault access)
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret

# Note: Both StorageConnectionString and PostgresConnectionString 
# are stored in Key Vault and will be automatically retrieved

# ElevenLabs API Key (for TTS/STT)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Azure Web App Configuration
# These will be set in Azure App Service Configuration
NODE_ENV=production
PORT=80
WEBSITES_PORT=80

# Database and Storage (resolved by Azure Key Vault)
# POSTGRES_URL=@Microsoft.KeyVault(SecretUri=https://kv-teknotassen.vault.azure.net/secrets/PostgresConnectionString/<VERSION>)
# BLOB_CONNECTION_STRING=@Microsoft.KeyVault(SecretUri=https://kv-teknotassen.vault.azure.net/secrets/StorageConnectionString/<VERSION>)
# OPENAI_API_KEY=@Microsoft.KeyVault(SecretUri=https://kv-teknotassen.vault.azure.net/secrets/OpenAIKey/<VERSION>)

# Container Registry (for Azure Web App Linux Containers)
AZURE_CONTAINER_REGISTRY=acrteknotassen
AZURE_WEBAPP_NAME=web-teknotassen
AZURE_RESOURCE_GROUP=teknotassen-rg
